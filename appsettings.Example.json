{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "YOUR_CONNECTION_STRING",
    "DatabaseName": "auth_db"
  },
  "Twilio": {
    "AccountSid": "YOUR_ACCOUNT_SID",
    "AuthToken": "YOUR_AUTH_TOKEN",
    "VerifyServiceSid": "YOUR_VERIFY_SERVICE_SID"
  },
  "Jwt": {
    "Key": "YOUR_JWT_KEY_MIN_32_CHARS",
    "Issuer": "MonAPI",
    "Audience": "MonAppClient",
    "ExpirationHours": 24
  }
}